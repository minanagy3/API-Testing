pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run API Tests') {
            steps {
                sh 'npm run test:all'
            }
        }
        
        stage('Archive Test Results') {
            steps {
                archiveArtifacts artifacts: 'reports/**/*', fingerprint: true
            }
        }
    }
    
    post {
        always {
            publishHTML([
                reportDir: 'reports',
                reportFiles: 'newman-report.html',
                reportName: 'Newman HTML Report',
                keepAll: true
            ])
        }
        failure {
            emailext (
                subject: "API Tests Failed - ${env.JOB_NAME}",
                body: "The API tests have failed. Please check the build logs.",
                to: "${env.CHANGE_AUTHOR_EMAIL}"
            )
        }
    }
}

